---
import Button from "./Button.astro";
import Countdown from "./Countdown.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body {
        overflow-x: hidden;
      }
    </style>
  </head>
  <body>
    <div
      class="object-fill flex items-center -mt-7 justify-center xl:h-[620px] min-[500px]:h-[250px] min-[650px]:h-[300px] min-[650px]:mt-0 min-[750px]:h-[350px] min-[850px]:h-[400px] min-[950px]:h-[450px] min-[1050px]:h-[500px] min-[1150px]:h-[550px] min-[1250px]:h-[600px] relative w-full"
    >
      <img
        src="/Hero.svg"
        alt="Herografik"
        class="w-[135%] sm:w-[120%] h-[195%] object-fill object-center z-20 absolute max-w-5xl min-[900px]:w-[125%] min-[850px]:max-w-[70rem] min-[950px]:max-w-[75rem] min-[1050px]:max-w-[80rem] min-[1100px]:max-w-[120rem]"
      />
      <img
        src="/herobillede.png"
        alt=""
        class="w-full z-10 absolute object-cover max-h-[1000px] h-[140%] min-[550px]:h-[165%] min-[900px]:h-[165%] xs"
      />

      <div class="z-30 flex justify-center items-center flex-col mt-8">
        <h1
          class="tracking-in-expand font-khand text-[82px] font-bold text-cream-500 drop-shadow-lg min-[750px]:text-[150px] min-[1100px]:text-[200px]"
        >
          ENGAGE
        </h1>
        <h3
          class="tracking-in-expand2 font-khand text-[22px] text-sand-500 font-bold -mt-8 min-[750px]:text-[35px] min-[1100px]:text-[45px]"
        >
          Musikfestival på kastellet
        </h3>
        <Countdown />
        <div class="z-40">
          <Button variant="secondary">KØB BILLET</Button>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  .tracking-in-expand {
    -webkit-animation: tracking-in-expand 0.7s
      cubic-bezier(0.215, 0.61, 0.355, 1) both;
    animation: tracking-in-expand 0.7s cubic-bezier(0.215, 0.61, 0.355, 1) both;
  }

  /* ----------------------------------------------
