<a id="button" class="inline-block bg-blo-500 h-[50px] w-[50px] text-center rounded-[4px] fixed bottom-[30px] right-[30px] z-50 invisible"></a>


<style>
  #button {
 
 transition:
   background-color 0.3s,
   opacity 0.5s,
   visibility 0.5s;
 opacity: 0;
 visibility: hidden;
 z-index: 100;
}

#button::after {
  content: "\f077";
  font-family: FontAwesome;
  font-weight: normal;
  font-style: normal;
  font-size: 2em;
  line-height: 50px;
  color: #FDF7DA;
}
#button:hover {
  cursor: pointer;
  background-color: #C7522A;
}

#button:hover::after {
  color: #FDF7DA;
}
#button.show {
  opacity: 1;
  visibility: visible;
}


@media (min-width: 500px) {
  .content {
    width: 43%;
  }
  #button {
    margin: 30px;
  }
}

</style>

<script>
  var btn = document.getElementById("button");

  window.addEventListener("scroll", function () {
    if (window.scrollY > 300) {
      btn.classList.add("show");
    } else {
      btn.classList.remove("show");
    }
  });

  btn.addEventListener("click", function (e) {
    e.preventDefault();
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>
